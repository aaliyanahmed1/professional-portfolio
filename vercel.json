{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",       // Send backend API routes to Express
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",           // All other routes (like /, /about, etc.) go to frontend
      "dest": "/index.html"
    }
  ]
}
